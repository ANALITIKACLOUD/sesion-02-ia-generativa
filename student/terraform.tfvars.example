# ============================================
# CONFIGURACIÓN DEL ESTUDIANTE
# ============================================
# Copia este archivo a terraform.tfvars y completa tu información

# Tu ID único de estudiante (formato: alumnoXX donde XX = 01-35)
student_id = "alumno01"  # CAMBIAR POR TU ID ASIGNADO

# ============================================
# CONFIGURACIÓN DE INFRAESTRUCTURA COMPARTIDA
# ============================================
# Estos valores vienen de la infraestructura compartida (shared/)
# El instructor te proporcionará estos valores

# Región de AWS
aws_region = "us-east-1"

# VPC compartida
vpc_id = "vpc-xxxxxxxxxx"

# Subnets privadas (lista)
private_subnet_ids = [
  "subnet-xxxxxxxxxx",
  "subnet-yyyyyyyyyy"
]

# Security Group para Lambda
lambda_security_group_id = "sg-xxxxxxxxxx"

# OpenSearch compartido
opensearch_endpoint   = "search-taller-rag-xxxxxxxxxxxxx.us-east-1.es.amazonaws.com"
opensearch_domain_arn = "arn:aws:es:us-east-1:xxxxxxxxxxxx:domain/taller-rag"

# ============================================
# CONFIGURACIÓN OPCIONAL
# ============================================
# Puedes ajustar estos valores si lo necesitas

